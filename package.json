{
  "name": "vrchat-albums",
  "version": "0.18.0",
  "main": "main/index.cjs",
  "author": {
    "name": "tktcorporation"
  },
  "description": "VRChatで撮影した写真を整理・管理するためのデスクトップアプリケーションです。VRChatのログファイルと写真を自動的に関連付けて、いつ、どのワールドで撮影したかを簡単に確認できます。",
  "keywords": [
    "vite",
    "react",
    "electron",
    "typescript"
  ],
  "repository": {
    "url": "https://github.com/tktcorporation/vrchat-albums"
  },
  "productName": "VRChatAlbums",
  "type": "module",
  "workspaces": [
    "pages"
  ],
  "scripts": {
    "preinstall": "nlx only-allow yarn",
    "postinstall": "simple-git-hooks && nr license-check:generate && nr rebuild-native",
    "rebuild-native": "electron-rebuild -f -w clip-filepaths",
    "setup:debug": "bash debug/genDevFiles.sh",
    "generate:debug-data": "nlx tsx scripts/generate-debug-data.mts",
    "dev": "SENTRY_DSN='' ./scripts/dev.sh",
    "dev:vite": "vite",
    "dev:electron": "vite build -c electron/vite.config.ts && electron . --disable-gpu",
    "dev:landing": "yarn workspace @vrchat-albums/landing-page dev",
    "build:landing": "yarn workspace @vrchat-albums/landing-page build",
    "build": "run-s lint:type-check build:vite build:electron",
    "build:vite": "vite build",
    "build:electron": "vite build -c electron/vite.config.ts",
    "build:electron:tsc": "tsc -p electron",
    "build:electron:watch": "vite build -c electron/vite.config.ts --watch",
    "dist": "run-s clean:build build \"electron-dist -- --publish never\"",
    "pack": "run-s clean:build build \"electron-dist -- --dir\"",
    "publish": "run-s clean:build build \"electron-dist -- --publish always\"",
    "electron-dist": "NODE_ENV=production electron-builder --config=electron-builder.cjs",
    "clean:build": "rimraf dist main src/out",
    "update-changelog": "git-cliff -c ./cliff.toml -o CHANGELOG.md",
    "clean:debug": "bash debug/cleanDevFiles.sh",
    "find-deadcode": "ts-prune",
    "license-check:generate": "node scripts/generate-licenses.mjs",
    "license-check:validate": "license-checker --production --failOn 'GPL;GPL-2.0;GPL-3.0;LGPL;LGPL-3.0;AGPL;AGPL-3.0;AGPL-3.0-only;'",
    "test": "nr vitest run",
    "test:web": "vitest run --project web",
    "test:electron": "vitest run --project electron",
    "test:playwright": "run-s build \"playwright:setup-and-run\" sync-landing-images",
    "playwright:setup-and-run": "playwright install --with-deps && playwright test --timeout=60000",
    "sync-landing-images": "bash scripts/sync-landing-images.sh",
    "lint": "run-p lint:biome lint:type-check lint:actionlint lint:valueobjects",
    "lint:valueobjects": "nlx tsx scripts/lint-valueobjects.ts",
    "lint:biome": "biome check .",
    "lint:type-check": "run-p lint:type-check:tsgo:electron lint:type-check:tsgo:src",
    "lint:type-check:tsc": "run-p lint:type-check:tsc:electron lint:type-check:tsc:src",
    "lint:type-check:tsc:electron": "tsc --noEmit -p electron",
    "lint:type-check:tsc:src": "tsc --noEmit",
    "lint:type-check:tsgo": "run-p lint:type-check:tsgo:electron lint:type-check:tsgo:src",
    "lint:type-check:tsgo:electron": "tsgo --noEmit -p electron",
    "lint:type-check:tsgo:src": "tsgo --noEmit",
    "lint:actionlint": "nlx @tktco/node-actionlint",
    "lint:fix": "run-s \"lint:fix:biome\" lint:type-check",
    "lint:fix:biome": "biome check --apply-unsafe .",
    "lint:fix:tsc": "run-s \"lint:fix:biome\" lint:type-check:tsc",
    "sentry:sourcemaps": "run-s sentry:sourcemaps:electron sentry:sourcemaps:vite",
    "sentry:sourcemaps:electron": "sentry-cli sourcemaps inject --org $SENTRY_ORG --project $SENTRY_PROJECT --release $SENTRY_RELEASE ./main && sentry-cli sourcemaps upload --org $SENTRY_ORG --project $SENTRY_PROJECT --release $SENTRY_RELEASE ./main",
    "sentry:sourcemaps:vite": "sentry-cli sourcemaps inject --org $SENTRY_ORG --project $SENTRY_PROJECT --release $SENTRY_RELEASE ./src/out && sentry-cli sourcemaps upload --org $SENTRY_ORG --project $SENTRY_PROJECT --release $SENTRY_RELEASE ./src/out",
    "knip": "knip --config knip.config.ts"
  },
  "simple-git-hooks": {
    "pre-commit": "nr lint",
    "pre-push": "nr test"
  },
  "packageManager": "yarn@4.1.0",
  "engines": {
    "node": "20",
    "yarn": "4"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "1.1.5",
    "@radix-ui/react-context-menu": "^2.2.4",
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-scroll-area": "^1.2.2",
    "@radix-ui/react-select": "^2.1.7",
    "@radix-ui/react-separator": "^1.1.3",
    "@radix-ui/react-slot": "^1.2.0",
    "@radix-ui/react-switch": "^1.1.2",
    "@radix-ui/react-toast": "^1.2.2",
    "@sentry/cli": "^2.45.0",
    "@sentry/electron": "^6.6.0",
    "@sentry/vite-plugin": "^3.5.0",
    "@sequelize/core": "7.0.0-alpha.40",
    "@sequelize/sqlite3": "7.0.0-alpha.40",
    "@tanstack/react-query": "4.36.1",
    "@tanstack/react-virtual": "^3.11.2",
    "@trpc/client": "10.45.2",
    "@trpc/react-query": "10.45.2",
    "@trpc/server": "10.45.2",
    "@vitejs/plugin-react": "4.2.1",
    "class-variance-authority": "0.7.0",
    "clip-filepaths": "^0.2.0",
    "clsx": "2.1.1",
    "consola": "^3.4.2",
    "date-fns": "2.30.0",
    "electron-is-dev": "2.0.0",
    "electron-log": "5.3.0",
    "electron-store": "8.2.0",
    "electron-trpc": "0.5.2",
    "electron-unhandled": "4.0.1",
    "electron-updater": "6.3.9",
    "exiftool-vendored": "^24.5.0",
    "glob": "10.4.3",
    "jotai": "^2.12.3",
    "lucide-react": "0.376.0",
    "neverthrow": "6.2.1",
    "ofetch": "^1.4.1",
    "p-queue": "^8.1.0",
    "pathe": "1.1.2",
    "pony-cause": "2.1.11",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-error-boundary": "4.0.13",
    "react-hot-toast": "2.4.1",
    "rxjs": "^7.8.1",
    "sharp": "0.33.3",
    "superjson": "1.13.3",
    "tailwind-merge": "2.3.0",
    "tailwindcss": "3.4.3",
    "tailwindcss-animate": "1.0.7",
    "tmp-promise": "^3.0.3",
    "ts-pattern": "5.1.1",
    "ufo": "^1.5.4",
    "uuidv7": "^1.0.2",
    "vite": "5.4.19",
    "zod": "^4.0.0",
    "zustand": "4.5.2"
  },
  "devDependencies": {
    "@antfu/ni": "^0.23.0",
    "@biomejs/biome": "1.6.0",
    "@playwright/test": "1.43.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.1.0",
    "@tktco/node-actionlint": "^1.5.2",
    "@types/electron-is-dev": "1.1.1",
    "@types/license-checker": "25.0.6",
    "@types/node": "^22.15.29",
    "@types/react": "18.2.33",
    "@types/react-dom": "18.2.14",
    "@types/sharp": "0.32.0",
    "@types/uuid": "^10.0.0",
    "@typescript/native-preview": "^7.0.0-dev.20250523.1",
    "@vitest/coverage-v8": "^2.1.8",
    "@welldone-software/why-did-you-render": "^8.0.3",
    "autoprefixer": "10.4.19",
    "electron": "34.3.0",
    "electron-builder": "24.13.3",
    "electron-rebuild": "^3.2.9",
    "git-cliff": "^2.5.0",
    "jsdom": "^25.0.1",
    "knip": "^5.59.1",
    "license-checker": "25.0.1",
    "npm-run-all2": "^8.0.4",
    "playwright": "1.43.1",
    "postcss": "8.4.38",
    "rimraf": "5.0.5",
    "simple-git-hooks": "2.11.1",
    "ts-prune": "0.10.3",
    "typescript": "^5.8.3",
    "uuid": "^10.0.0",
    "vitest": "^2.1.8"
  },
  "build": {
    "productName": "VRChatAlbums",
    "publish": {
      "provider": "github",
      "owner": "tktcorporation",
      "repo": "vrchat-albums"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icons"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    }
  }
}
